<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include("layouts/info.ejs") %>
      <hr />
      <div class="user-menu"><%- include("layouts/menu.ejs") %></div>
    </div>
    <div class="profile-box">
      <div class="profile-details">
        <div class="profile-photo">
          <% if (user.photo) { %>
          <img src="./media/users/<%= user.photo  %> " alt="" />
          <% } else { %>
          <img src="/images/avatar.png" />
          <% } %>

          <div class="user-data">
            <h2><%= user.name %></h2>
            <p><%= user.email %></p>
            <p class="follow"><%= user.follower.length %> followers  .<%= user.following.length %> following</p>
          </div>
        </div>
        <div class="user-gallery">
          <h3>Gallery Photo</h3>
          <hr />
          <div class="gallery-area">
            <% user.gallery.forEach(item => { %>
            <div class="gallery-item">
              <img src="./media/gallery/<%= item %> " alt="" />
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
