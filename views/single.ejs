<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include("layouts/info.ejs") %>
      <hr />
      <div class="user-menu"><%- include("layouts/menu.ejs") %></div>
    </div>
    <div class="profile-box">
      <div class="profile-details">
        <div class="profile-photo">
          <% if (profile.photo) { %>
          <img src="./media/users/<%= profile.photo  %> " alt="" />
          <% } else { %>
          <img src="/images/avatar.png" />
          <% } %>

          <div class="user-data">
            <h2><%= profile.name %></h2>
            <p><%= profile.email %></p>
            <p class="follow"><%= profile.follower.length %> followers  .<%= profile.following.length %> following</p>
          </div>
        </div>
        <div class="user-gallery">
          <h3>Gallery Photo</h3>
          <hr />
          <div class="gallery-area">
            <% profile.gallery.forEach(item => { %>

                
            <div class="gallery-item">
              <img src="./media/gallery/<%= item %> " alt="" />
            </div>
                

            
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
